{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/v0",
  "pipeline": {
    "//#tsc": {
      "outputs": [
        "dist-types/**/*"
      ]
    },
    "build": {
      "dependsOn": [
        "//#tsc",
        "^build"
      ],
      "outputs": [
        "dist/**/*"
      ]
    },
    "test": {
      "outputs": [
        "coverage/**/*"
      ],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/test/**/*.ts",
        "src/test/**/*.tsx"
      ]
    },
    "diff": {
      "dependsOn": [
        "build"
      ],
      "outputs": []
    }
  }
}